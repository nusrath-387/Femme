<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B59875A1"

    tools:context=".coughExist">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can try following medicine daily twice"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:textColor="#19020C"


        android:textSize="20sp"

        />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="500dp"



        android:layout_height="300dp"
        android:orientation="horizontal">



        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/fever"

            />

        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/fever2"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="500dp"



        android:layout_height="300dp"
        android:orientation="horizontal">



        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/fever3"

            />

        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/fever4"

            />
    </LinearLayout>




</LinearLayout>