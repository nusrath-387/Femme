<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#B55B226A"
    android:layout_height="match_parent"
    tools:context=".splashScreen">

    <ImageView

        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/welcome"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CuddleCare"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:textColor="#EFE6EA"
        android:textStyle="bold"
        android:fontFamily="@font/ananda"
        android:textSize="29sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Be a Smart Paren"
        android:fontFamily="@font/ananda"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="15dp"
        android:textColor="#DF000000"

        android:textSize="20sp"

        />
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="200dp"
        android:layout_height="170dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        android:progress="10"
        android:progressBackgroundTint="#0D5E56"
        android:progressTint="#3F51B5"
        android:layout_marginLeft="100dp"



        />
</LinearLayout>