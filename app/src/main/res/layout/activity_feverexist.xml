<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#B5C4B6C8"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feverexist">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can try following medicine daily twice"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/ananda"
        android:layout_marginBottom="20dp"
        android:textColor="#19020C"


        android:textSize="20sp"

        />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="500dp"



        android:layout_height="300dp"
        android:orientation="horizontal">



        <ImageView

            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/fever"

            />

        <ImageView

            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fever4"

            />
        <ImageView

            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fever2"

            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="500dp"



        android:layout_height="300dp"
        android:orientation="horizontal">



        <ImageView

            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/dog"

            />

        <ImageView

            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fever3"

            />
        <ImageView

            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/permium"

            />
    </LinearLayout>

</LinearLayout>